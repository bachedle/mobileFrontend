<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- Card Image -->
        <ImageView
            android:id="@+id/imgCard"
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:scaleType="fitXY"
            android:src="@drawable/sample_card"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Card Name -->
        <TextView
            android:id="@+id/tvCardName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Card Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@id/imgCard"
            app:layout_constraintTop_toTopOf="@id/imgCard"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" />

        <!-- Card Set -->
        <TextView
            android:id="@+id/tvCardSet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Card Set"
            android:textSize="12sp"
            android:textColor="#555555"
            app:layout_constraintStart_toStartOf="@id/tvCardName"
            app:layout_constraintTop_toBottomOf="@id/tvCardName"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="2dp" />

        <!-- Card Rarity -->
        <TextView
            android:id="@+id/tvCardRarity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Card Rarity"
            android:textSize="12sp"
            android:textColor="#777777"
            app:layout_constraintStart_toStartOf="@id/tvCardSet"
            app:layout_constraintTop_toBottomOf="@id/tvCardSet"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="2dp" />

        <!-- Card Code -->
        <TextView
            android:id="@+id/tvCardCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Card Code"
            android:textColor="#777777"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/tvCardSet"
            app:layout_constraintTop_toBottomOf="@id/tvCardRarity"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="2dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>